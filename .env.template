# Environment variables for MCP OCR Services
# Copy this file to .env and fill in your API keys

# Nanonets OCR API Key
# Get your API key from: https://app.nanonets.com/
NANONETS_API_KEY=your_nanonets_api_key_here

# Optional: Hugging Face token for DeepSeek and Qwen models
# Get your token from: https://huggingface.co/settings/tokens
HUGGING_FACE_HUB_TOKEN=your_huggingface_token_here

# Docker Compose environment
COMPOSE_PROJECT_NAME=medical-ocr-pipeline
DOCKER_BUILDKIT=1

# GPU Support (set to "true" if you have NVIDIA GPU)
USE_GPU=false

# Logging level
LOG_LEVEL=INFO