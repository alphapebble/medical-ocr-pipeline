# Environment Configuration for Medical OCR Pipeline
# Copy this to .env and customize as needed

# =============================================================================
# OPTIONAL API KEYS
# =============================================================================

# Nanonets API Key (optional - leave blank to disable Nanonets service)
# Get your key from: https://app.nanonets.com/
NANONETS_API_KEY=

# =============================================================================
# SERVICE CONFIGURATION  
# =============================================================================

# Enable/disable specific OCR engines (true/false)
ENABLE_TESSERACT=true
ENABLE_EASYOCR=true
ENABLE_PADDLE=true
ENABLE_SURYA=true
ENABLE_DOCLING=true
ENABLE_DOCTR=true
ENABLE_DEEPSEEK=true
ENABLE_QWEN=true
ENABLE_MARKER=true
ENABLE_NANONETS=false
ENABLE_CHANDRA=true
ENABLE_OLMO=true
ENABLE_DOTS=true

# =============================================================================
# MODEL OVERRIDES
# =============================================================================

# Override default model paths (optional)
DEEPSEEK_MODEL=deepseek-ai/DeepSeek-OCR
QWEN_MODEL=Qwen/Qwen3-VL-32B-Instruct
OLMO_MODEL=allenai/olmOCR-2-7B-1025
DOTS_MODEL=rednote-hilab/dots.ocr

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Resource limits
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=300
MODEL_LOADING_TIMEOUT=600

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Set to true for development mode (more verbose logging)
DEBUG_MODE=false

# Docker compose profile (lightweight, full, development)
COMPOSE_PROFILE=lightweight